<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@android:style/Widget.ScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbarStyle="outsideInset"
    tools:context=".ViewRoommateContactInformationActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="matrix"
            android:src="@drawable/bg" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraintLayout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@id/view_contacted_roommate_contact_information_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.100000024">

            <TextView
                android:id="@+id/name_label"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Student Name:"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/contact_information_student_name"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="John doe"
                app:layout_constraintBottom_toBottomOf="@+id/name_label"
                app:layout_constraintStart_toEndOf="@+id/name_label" />

            <TextView
                android:id="@+id/email_label"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Email:"
                app:layout_constraintEnd_toEndOf="@+id/name_label"
                app:layout_constraintTop_toBottomOf="@+id/name_label" />

            <TextView
                android:id="@+id/contact_information_student_email"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="s20xxxxxxx@kfupm.edu.sa"
                android:textColor="@android:color/holo_blue_dark"
                android:textIsSelectable="true"
                app:layout_constraintBottom_toBottomOf="@+id/email_label"
                app:layout_constraintStart_toEndOf="@+id/email_label" />

            <TextView
                android:id="@+id/phone_label"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Phone number:"
                app:layout_constraintEnd_toEndOf="@+id/email_label"
                app:layout_constraintTop_toBottomOf="@+id/email_label" />

            <TextView
                android:id="@+id/roommate_contact_information_student_city_label"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="City:"
                android:textIsSelectable="true"
                app:layout_constraintEnd_toEndOf="@+id/phone_label"
                app:layout_constraintTop_toBottomOf="@+id/phone_label" />

            <TextView
                android:id="@+id/roommate_contact_information_student_city"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Student_city"
                android:textIsSelectable="true"
                app:layout_constraintBottom_toBottomOf="@+id/roommate_contact_information_student_city_label"
                app:layout_constraintStart_toEndOf="@+id/roommate_contact_information_student_city_label" />

            <TextView
                android:id="@+id/roommate_contact_information_student_major_label"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Major:"
                android:textIsSelectable="true"
                app:layout_constraintEnd_toEndOf="@+id/roommate_contact_information_student_city_label"
                app:layout_constraintTop_toBottomOf="@+id/roommate_contact_information_student_city_label" />

            <TextView
                android:id="@+id/roommate_contact_information_student_major"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Student_major"
                android:textIsSelectable="true"
                app:layout_constraintBottom_toBottomOf="@+id/roommate_contact_information_student_major_label"
                app:layout_constraintStart_toEndOf="@+id/roommate_contact_information_student_major_label" />

            <TextView
                android:id="@+id/roommate_contact_information_student_year_label"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Year:"
                android:textIsSelectable="true"
                app:layout_constraintEnd_toEndOf="@+id/roommate_contact_information_student_major_label"
                app:layout_constraintTop_toBottomOf="@+id/roommate_contact_information_student_major_label" />

            <TextView
                android:id="@+id/roommate_contact_information_student_year"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Student_year"
                android:textIsSelectable="true"
                app:layout_constraintBottom_toBottomOf="@+id/roommate_contact_information_student_year_label"
                app:layout_constraintStart_toEndOf="@+id/roommate_contact_information_student_year_label" />

            <TextView
                android:id="@+id/contact_information_student_phone"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="05xxxxxxxx"
                android:textColor="@android:color/holo_blue_dark"
                android:textIsSelectable="true"
                app:layout_constraintBottom_toBottomOf="@+id/phone_label"
                app:layout_constraintStart_toEndOf="@+id/phone_label" />

        </android.support.constraint.ConstraintLayout>


        <Button
            android:id="@+id/view_contacted_roommate_contact_information_button"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="View contact information"
            android:textAllCaps="false"
            app:layout_constraintBottom_toTopOf="@+id/remove_roommate_request"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/remove_roommate_request"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:text="Remove contact"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </android.support.constraint.ConstraintLayout>

</ScrollView>